##### push
alias gp='git push'
alias gpv='git push -v'
alias gpo='git push -u origin'
alias gpu='git push -u upstream'
##### rebase
alias grb='git rebase'
##### reset
alias gr='git reset'
alias grh='git reset --hard'
alias grs='git reset --soft HEAD^'
##### status
alias gs='git status'
